<!--pages/shop/shop.wxml-->
<view class="shop" wx:for="{{item}}" bindtap="naviga" id="{{index}}">
  <view>
    <image src='{{item.image}}' style='width: 200rpx; height: 200rpx; background-color: red;'></image>
  </view>
  <view class='shop-2'>
    <view>{{item.name}}</view>
    <view>{{item.introduction}}</view>
    <view class='shop-23'>
      <view class='shop-231'>{{item.price}}</view>
      <view class='shop-232'>{{item.artcleNum}}</view>
    </view>
  </view>
</view>